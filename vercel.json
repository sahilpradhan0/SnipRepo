{
  "rewrites": [
    {
      "source": "/((?!.*\\.(xml|txt|js|css|json|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$).*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "key": "Cache-Control",
      "value": "no-store"
    },
    { 
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ]
}